{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "main": "/bot-frontend/src/index.tsx",
  "include": [
    "src"
  ],
  "exclude": [
    "src/enzyme-bot",
    "src/actions",
    "src/reducers"
  ]
}
